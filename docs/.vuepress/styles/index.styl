.sidebar > .sidebar-links > li > a.sidebar-link {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.sidebar > .sidebar-links > li:not(:first-child){
  margin-top: 0 !important;
}

html,
body,
#app,
.theme-container{
  height: 100%;
}

main.home{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.theme-default-content.custom{
  flex-grow: 1;
  flex-shrink: 1;
  width: 100%;
}

@keyframes douyidou{
  0%{
    transform: rotate(-15deg);
  }
  25%{
    transform: rotate(0);
  }
  50%{
    transform: rotate(15deg);
  }
  75%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(-15deg);
  }
}
