+  }
+  .image {
+    position: absolute;
+    max-width: 200px;
+    width: 200px;
+    height: 200px;
+    top: 100%;
+    right: 0;
+    border-radius: 10px;
+    box-shadow: 1px 1px 10px #ccc;  
+  }
+}
+@media (max-width: 768px) {
+  .hover-image {
+    height: 48px;
+    padding: 0 4px 0 0;
+    border-bottom: 1px solid var(--vp-c-divider);
+    overflow: hidden;
+    transition: border-color 0.5s;
+  }
+}
